.header
    display flex
    justify-content space-between
    align-items center

    background-color #45c1e3
    color #fff

    padding 25px 35px
    height 20px

    font 400 10px 'Graphik Web', Helvetica, Arial, sans-serif
    text-transform uppercase
    letter-spacing 1px
    user-select none

    &__title
        font-size 15px
        font-weight 500
        text-decoration none

    &__title:active,
    &__title:visited
        color #fff

    &__button
        visibility hidden
        margin 0 10px
        color inherit
        text-decoration none
        line-height 20px

    &__button:hover
        color inherit
        text-decoration underline

    &__menu
        right 25px
        overflow hidden
        margin 0
        padding 0
        list-style none
        max-height 0
        transition max-height .9s ease-out

    &__menu-icon
        position absolute
        top 23px
        right 35px
        cursor pointer
        display inline-block
        user-select none

    &__navicon
        display block
        height 2px
        margin: 10px 2px;
        position relative
        width 18px

    &__navicon:before,
    &__navicon:after
        display block
        position absolute
        content ''
        height 100%
        width: 100%;
        background #fff
        transition all .3s ease-out

    &__navicon:before
        top 5px

    &__navicon:after
        top -5px

    &__menu-btn
        display none

    &__menu-btn:checked ~ .header__menu
        max-height 200px
        position absolute
        width 100%
        top 70px
        left 0
        display block
        text-align center
        background-color #45c1e3
        border-bottom 1px solid #41b5d5
        border-top 1px solid #41b5d5
        box-shadow: 0 42px 94px -87px rgba(82,82,82,1);

    &__menu-btn:checked ~ .header__menu .header__button
        padding 20px 10px
        margin 0
        display block
        visibility visible

    &__menu-btn:checked ~ .header__menu .header__button:hover
        background-color rgba(255, 255, 255, .1)
        text-decoration none

    &__menu-btn:checked ~ .header__menu-icon .header__navicon
        background transparent

    &__menu-btn:checked ~ .header__menu-icon .header__navicon:before
        top 0
        transform rotate(-45deg)

    &__menu-btn:checked ~ .header__menu-icon .header__navicon:after
        top 0
        transform rotate(45deg)

@media only screen and (min-width: 768px)
    .header

        &__menu
            max-height none
            display block

        &__menu-icon
            display none

        &__button
            visibility visible
