.signin
  display: flex
  flex-direction: column
  align-items: flex-end
  font-size: 12px

  &_hidden
    display: none

.form-signin
    display: flex
    flex-direction: column

  &__field
    display: flex
    justify-content: space-between
    padding-bottom: 5px

  &__label
    padding-right: 20px

  &__button
    align-self: flex-end
    width: 150px
